@model MekanKesfi.Models.FirmaKayit
<div>
    @{
        ViewBag.Title = "FirmaSahibiKayit";
    }
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Kayıt Ol", "FirmaSahibiKayit", "Firma", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Giriş Yap", "FirmaLoginSayfasi", "Firma", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>

    <br />
    <br />
    <br />


    <center><h2>Kayıt Ol</h2></center>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <table align="center">
                <tr>

                    <td style="font-weight:bold">Kullanıcı Adı</td>
                    <td>@Html.EditorFor(model => model.kullanici_adi, new { htmlAttributes = new { @class = "form-control" } })</td>
                    @Html.ValidationMessageFor(model => model.kullanici_adi, "", new { @class = "text-danger" })

                </tr>
                <tr>

                    <td style="font-weight:bold">Parola</td>

                    <td>@Html.EditorFor(model => model.parola, new { htmlAttributes = new { @class = "form-control", type="password" } })</td>
                    @Html.ValidationMessageFor(model => model.parola, "", new { @class = "text-danger" })
                </tr>

                <tr>

                    <td style="font-weight:bold">Parola Tekrar</td>

                    <td> @Html.EditorFor(model => model.parolaTekrar, new { htmlAttributes = new { @class = "form-control", type="password" } })</td>
                    @Html.ValidationMessageFor(model => model.parolaTekrar, "", new { @class = "text-danger" })


                </tr>
                <tr>
                    <td></td>
                    <td align="center"><input type="submit" value="Kayıt Ol" class="btn btn-default" /></td>
                </tr>
                </table>


                
                       
                  

        </div>
        
    </div>
    }
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}